@page
@model LoginModel

@{
    ViewData["Title"] = "ورود";
}


<div class="text-center">
    @* <h1>@ViewData["Title"]</h1> *@
    <div>
        <img class="small-logo" src="~/assets/media/image/logo-sm.png" alt="...">
    </div>
    <form class="form-signin" id="account" method="post">
        <h2>ورود به سامانه</h2>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <label asp-for="Input.Email" class="form-label"> ایمیل</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>

            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <label asp-for="Input.Password" class="form-label">رمز</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>

            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe"/>
                    من را به خاطر داشته باش
                </label>
            </div>
        </div>
        <div>
            <button id="login-submit" type="submit" class="btn btn-lg btn-primary btn-block">ورود</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
