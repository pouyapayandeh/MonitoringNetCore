@addTagHelper *, LazZiya.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MonitoringNetCore.Controllers.NewLicense
@{
    Layout = "/Views/Shared/_LayoutNoSidebar.cshtml";
}

<div class="text-center">
<div class="row row-cols-1 g-4">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <form asp-aciton="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="input-group mb-3">
                        <label asp-for="License" class="input-group-text">لایسنس:</label>
                        <input 
                            asp-for="License"
                            class="form-control" 
                        >
                        <div class="invalid-feedback" asp-validation-for="Path"></div>
                    </div>

                    <button type="submit" value="Create" class="btn btn-primary">ثبت لایسنس</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
